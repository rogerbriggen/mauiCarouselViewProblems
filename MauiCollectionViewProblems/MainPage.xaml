<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiCollectionViewProblems"
             x:Class="MauiCollectionViewProblems.MainPage"
             x:DataType="local:MainPage"
             >
    <VerticalStackLayout>
        <Label Text="Hallo"></Label>
        <Button
            x:Name="CreateNewListBtn"
            Text="Click me to create new entries in collection"
            Clicked="OnCreateNewListBtnClicked"
            HorizontalOptions="Center" />
        <CarouselView
                    Loop="false"
                    ItemsSource="{Binding animalsCollection}">
            <CarouselView.ItemTemplate>
                <DataTemplate x:DataType="local:Animal">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Birthday}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </VerticalStackLayout>
</ContentPage>
