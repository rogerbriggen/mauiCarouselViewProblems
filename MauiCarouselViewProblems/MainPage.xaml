<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiCarouselViewProblems"
             x:Class="MauiCarouselViewProblems.MainPage"
             x:DataType="local:MainPage"
             >
    <VerticalStackLayout>
        <CarouselView
                    Loop="False"
                    ItemsSource="{Binding animalsCollection}">
            <CarouselView.ItemTemplate>
                <DataTemplate x:DataType="local:Animal">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Birthday}" />
                        <Entry Text="{Binding Color}" HorizontalTextAlignment="Start" Keyboard="Numeric"/>
                        <Entry Text="{Binding Color}" HorizontalTextAlignment="Center" Keyboard="Numeric"/>
                        <Entry Text="{Binding Color}" HorizontalTextAlignment="End" Keyboard="Numeric"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </VerticalStackLayout>
</ContentPage>
